{%  extends 'base.html.twig' %}

{%  block title %}Inscription{% endblock %}

{% block body %}

    <h1 class="text-center my-4">Inscription</h1>

    <div class="row">
        <div class="col-10 mx-auto">

            {{ form_start(form_register, {'attr': {novalidate: 'novalidate'}} ) }}

                <div class="row">
                    <div class="col-4">{{ form_row(form_register.firstname) }}</div>
                    <div class="col-4">{{ form_row(form_register.lastname) }}</div>
                    <div class="col-4">{{ form_row(form_register.genre) }}</div>
                </div>

                <div class="row">
                    <div class="col-6">{{ form_row(form_register.email) }}</div>
                    <div class="col-6">{{ form_row(form_register.password) }}</div>
                </div>

                <button type="submit" class="">M'inscrire</button>
            {{ form_end(form_register) }}

        </div>
    </div>

{% endblock %}












